<h2 class="text-center my-4">📚 Adicione um Livro</h2>

<section class="container">
  <form action="/livro/add" method="post" class="mx-auto p-4 rounded-4 shadow-sm bg-light" style="max-width: 700px;">
    
    <!-- Nome do livro -->
    <div class="mb-3">
      <label for="name" class="form-label fw-semibold">📖 Nome do Livro</label>
      <input name="name" id="name" type="text" class="form-control" placeholder="Insira o nome do Livro" required />
    </div>

    <!-- Autor -->
    <div class="mb-3">
      <label for="author" class="form-label fw-semibold">✍️ Autor</label>
      <input name="author" id="author" type="text" class="form-control" placeholder="Insira o nome do autor" required />
    </div>

    <!-- Gêneros -->
    <div class="mb-3">
      <label class="form-label fw-semibold">🏷️ Gêneros</label>
      <div id="genres-container">
        <div class="input-group mb-2 genre-select">
          <select name="genres[]" class="form-select genre" required>
            <option disabled selected value="">Selecione um gênero</option>
            <option value="Romance">Romance</option>
            <option value="Ficção Científica">Ficção Científica</option>
            <option value="Fantasia">Fantasia</option>
            <option value="Aventura">Aventura</option>
            <option value="Terror">Terror</option>
            <option value="Suspense">Suspense</option>
            <option value="Policial">Policial</option>
            <option value="Drama">Drama</option>
            <option value="Biografia">Biografia</option>
            <option value="História">História</option>
            <option value="Autoajuda">Autoajuda</option>
            <option value="Ensaios">Ensaios</option>
            <option value="Poesia">Poesia</option>
            <option value="Humor">Humor</option>
            <option value="Mangá">Mangá</option>
            <option value="HQ">HQ</option>
            <option value="Infantil">Infantil</option>
            <option value="Juvenil">Juvenil</option>
          </select>
        </div>
      </div>
      <button type="button" id="add-genre" class="btn btn-outline-secondary btn-sm mt-2">+ Adicionar outro gênero</button>
    </div>

    <!-- Imagem -->
    <div class="mb-3">
      <label for="image" class="form-label fw-semibold">🖼️ URL da Imagem</label>
      <input name="image" id="image" type="text" class="form-control" placeholder="Link da capa do livro" required />
    </div>

    <!-- Nota -->
    <div class="mb-3">
      <label for="rating" class="form-label fw-semibold">⭐ Nota (1 a 5)</label>
      <input name="rating" id="rating" type="number" class="form-control" min="1" max="5" placeholder="Nota do livro" required />
    </div>

    <!-- Formato -->
    <div class="mb-3">
      <label for="format" class="form-label fw-semibold">📦 Formato</label>
      <select class="form-select" id="format" name="format" required>
        <option selected value="fisico">Físico</option>
        <option value="digital">Digital</option>
        <option value="outros">Outros</option>
      </select>
    </div>

    <!-- Está emprestado -->
    <div class="mb-3">
      <label for="isBorrowed" class="form-label fw-semibold">📤 Está emprestado?</label>
      <select class="form-select" id="isBorrowed" name="isBorrowed" required>
        <option selected value="0">Não</option>
        <option value="1">Sim</option>
      </select>
    </div>

    <!-- Para quem emprestou -->
    <div class="mb-3" id="borrowedByWrapper">
      <label for="borrowedBy" class="form-label fw-semibold">👤 Para quem emprestou?</label>
      <input name="borrowedBy" id="borrowedBy" type="text" class="form-control" placeholder="Nome da pessoa" />
    </div>

    <!-- Endereço -->
    <div class="mb-3">
      <label for="adress" class="form-label fw-semibold">📍 Endereço</label>
      <input name="adress" id="adress" type="text" class="form-control" placeholder="Onde o livro está guardado? (Ex: Estante do quarto)" />
    </div>

    <!-- Botão -->
    <div class="d-grid">
      <button type="submit" class="btn btn-primary">📥 Enviar</button>
    </div>
  </form>
</section>

<script src="/js/addbook.js"></script>
<script src="/js/script.js"></script>
