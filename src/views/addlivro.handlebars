<h2 class="text-center my-4">📚 Adicione um Livro</h2>

<section class="container">
  <form
    action="/livro/add"
    method="post"
    class="mx-auto p-4 rounded-4 shadow-sm bg-light"
    style="max-width: 700px;"
  >

    <!-- Nome do livro -->
    <div class="mb-3">
      <label for="name" class="form-label fw-semibold">📖 Nome do Livro</label>
      <input
        name="name"
        id="name"
        type="text"
        class="form-control"
        placeholder="Insira o nome do Livro"
        required
      />
    </div>

    <!-- Autor -->
    <div class="mb-3">
      <label for="author" class="form-label fw-semibold">✍️ Autor</label>
      <input
        name="author"
        id="author"
        type="text"
        class="form-control"
        placeholder="Insira o nome do autor"
        required
      />
    </div>

    <!-- Gêneros -->
    <div class="mb-3">
      <label class="form-label fw-semibold">🏷️ Gêneros</label>
      <div id="genres-container">
        <div class="input-group mb-2 genre-select">
          <select name="genres[]" class="form-select genre" required>
            <option disabled selected value="">Selecione um gênero</option>
            <option value="Ação">Ação</option>
            <option value="Antologia">Antologia</option>
            <option value="Aventura">Aventura</option>
            <option value="Autoajuda">Autoajuda</option>
            <option value="Autoajuda Espiritual">Autoajuda Espiritual</option>
            <option value="Autoajuda Profissional">Autoajuda Profissional</option>
            <option value="Biografia">Biografia</option>
            <option value="Biologia">Biologia</option>
            <option value="Chick Lit">Chick Lit</option>
            <option value="Ciências">Ciências</option>
            <option value="Clássicos">Clássicos</option>
            <option value="Contos">Contos</option>
            <option value="Crônicas">Crônicas</option>
            <option value="Cyberpunk">Cyberpunk</option>
            <option value="Distopia">Distopia</option>
            <option value="Distopia Científica">Distopia Científica</option>
            <option value="Drama">Drama</option>
            <option value="Drama Histórico">Drama Histórico</option>
            <option value="Educação">Educação</option>
            <option value="Economia">Economia</option>
            <option value="Épico">Épico</option>
            <option value="Ensaios">Ensaios</option>
            <option value="Fantasia">Fantasia</option>
            <option value="Fantasia Épica">Fantasia Épica</option>
            <option value="Fantasia Urbana">Fantasia Urbana</option>
            <option value="Ficção Científica">Ficção Científica</option>
            <option value="Ficção Histórica">Ficção Histórica</option>
            <option value="Ficção Juvenil">Ficção Juvenil</option>
            <option value="Ficção Literária">Ficção Literária</option>
            <option value="Filosofia">Filosofia</option>
            <option value="Gastronomia">Gastronomia</option>
            <option value="Gótico">Gótico</option>
            <option value="História">História</option>
            <option value="História Antiga">História Antiga</option>
            <option value="HQ">HQ</option>
            <option value="Humor">Humor</option>
            <option value="Infantil">Infantil</option>
            <option value="Jornalismo">Jornalismo</option>
            <option value="Juvenil">Juvenil</option>
            <option value="Light Novel">Light Novel</option>
            <option value="Literatura de Guerra">Literatura de Guerra</option>
            <option value="Literatura de Viagem">Literatura de Viagem</option>
            <option value="Literatura Erótica">Literatura Erótica</option>
            <option value="Literatura Feminina">Literatura Feminina</option>
            <option value="Literatura Infantojuvenil">Literatura Infantojuvenil</option>
            <option value="Literatura Juvenil">Literatura Juvenil</option>
            <option value="Literatura Religiosa">Literatura Religiosa</option>
            <option value="Mangá">Mangá</option>
            <option value="Memórias">Memórias</option>
            <option value="Mistério">Mistério</option>
            <option value="Mitologia">Mitologia</option>
            <option value="Narrativa Histórica">Narrativa Histórica</option>
            <option value="Noir">Noir</option>
            <option value="Poesia">Poesia</option>
            <option value="Poesia Moderna">Poesia Moderna</option>
            <option value="Policial">Policial</option>
            <option value="Psicologia">Psicologia</option>
            <option value="Psicoterapia">Psicoterapia</option>
            <option value="Religião">Religião</option>
            <option value="Reportagem">Reportagem</option>
            <option value="Romance">Romance</option>
            <option value="Romance Histórico">Romance Histórico</option>
            <option value="Romance Paranormal">Romance Paranormal</option>
            <option value="Sátira">Sátira</option>
            <option value="Sci-Fi Espacial">Sci-Fi Espacial</option>
            <option value="Steampunk">Steampunk</option>
            <option value="Suspense">Suspense</option>
            <option value="Suspense Policial">Suspense Policial</option>
            <option value="Suspense Psicológico">Suspense Psicológico</option>
            <option value="Teatro">Teatro</option>
            <option value="Terror">Terror</option>
            <option value="Terror Gótico">Terror Gótico</option>
            <option value="Thriller">Thriller</option>
            <option value="Western">Western</option>
            <option value="Outros">Outros</option>
          </select>
        </div>
      </div>
      <button
        type="button"
        id="add-genre"
        class="btn btn-outline-secondary btn-sm mt-2"
      >+ Adicionar outro gênero</button>
    </div>
    <!-- ISBN  -->
    <div class="mb-3">
      <label for="isbn" class="form-label fw-semibold">📄 ISBN</label>
      <input
        name="isbn"
        id="isbn"
        type="text"
        class="form-control"
        placeholder="Link da capa do livro"
        required
      />
    </div>

    <!-- Imagem -->
    <div class="mb-3">
      <label for="image" class="form-label fw-semibold">🖼️ URL da Imagem</label>
      <input
        name="image"
        id="image"
        type="text"
        class="form-control"
        placeholder="Link da capa do livro"
        required
      />
    </div>

    <!-- Nota -->
    <div class="mb-3">
      <label for="rating" class="form-label fw-semibold">⭐ Nota (1 a 5)</label>
      <input
        name="rating"
        id="rating"
        type="number"
        class="form-control"
        min="1"
        max="5"
        placeholder="Nota do livro"
        required
      />
    </div>

    <!-- Formato -->
    <div class="mb-3">
      <label for="format" class="form-label fw-semibold">📦 Formato</label>
      <select class="form-select" id="format" name="format" required>
        <option selected value="fisico">Físico</option>
        <option value="digital">Digital</option>
        <option value="outros">Outros</option>
      </select>
    </div>

    <!-- Está emprestado -->
    <div class="mb-3">
      <label for="isBorrowed" class="form-label fw-semibold">📤 Está emprestado?</label>
      <select class="form-select" id="isBorrowed" name="isBorrowed" required>
        <option selected value="0">Não</option>
        <option value="1">Sim</option>
      </select>
    </div>

    <!-- Para quem emprestou -->
    <div class="mb-3" id="borrowedByWrapper">
      <label for="borrowedBy" class="form-label fw-semibold">👤 Para quem
        emprestou?</label>
      <input
        name="borrowedBy"
        id="borrowedBy"
        type="text"
        class="form-control"
        placeholder="Nome da pessoa"
      />
    </div>

    <!-- Endereço -->
    <div class="mb-3">
      <label for="adress" class="form-label fw-semibold">📍 Endereço</label>
      <input
        name="adress"
        id="adress"
        type="text"
        class="form-control"
        placeholder="Onde o livro está guardado? (Ex: Estante do quarto)"
      />
    </div>

    <!-- Botão -->
    <div class="d-grid">
      <button type="submit" class="btn btn-primary">📥 Enviar</button>
    </div>
  </form>
</section>

<script src="/js/addbook.js"></script>
<script src="/js/script.js"></script>
<script src="/js/isbn.js"></script>