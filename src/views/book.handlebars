<h1 class="text-center my-4">
  Todos os Livros
</h1>

<section class="container">
  <div class="row g-4">
    {{#each livro}}
    <div class="col-md-4">
      <div class="card h-100 shadow-sm">
        <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}" style="object-fit: cover; height: 250px;">
        <div class="card-body">
          <!-- ID do livro -->
          <h6 class="text-muted mb-2">
            <span class="badge bg-secondary">ID: {{this.id}}</span>
          </h6>

          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text"><strong>Autor:</strong> {{this.author}}</p>
          <p class="card-text"><strong>G√™nero:</strong> {{this.genre}}</p>
          <p class="card-text"><strong>Avalia√ß√£o:</strong> {{this.rating}}</p>
          <p class="card-text"><strong>Formato:</strong> {{this.format}}</p>

          {{#if this.adress}}
          <p class="card-text"><strong>üìç Endere√ßo:</strong> {{this.adress}}</p>
          {{/if}}

          <p class="card-text">
            <strong>Status:</strong>
            {{#if this.isBorrowed}}
              Emprestado para {{this.borrowedBy}}
            {{else}}
              Dispon√≠vel
            {{/if}}
          </p>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</section>
